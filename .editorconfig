# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Matches multiple files with brace expansion notation
# Set default charset
[*.{cpp,hpp,h,c}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.go]
indent_style = tab

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

